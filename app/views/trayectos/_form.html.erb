  </div>

  <div>
    <%= form.label :destino, style: "display: block" %>
    <%= form.text_field :destino %>
  </div>

  <div>
    <%= form.label :fecha_salida, style: "display: block" %>
    <%= form.date_field :fecha_salida %>
  </div>

  <div>
    <%= form.label :fecha_llegada, style: "display: block" %>
    <%= form.date_field :fecha_llegada %>
  </div>

  <div>
    <%= form.label :vehiculo_id, style: "display: block" %>
    <%= form.collection_select :user_id, Vehiculo.all, :id, :placa, prompt: "selecciona un vehiculo"%>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.collection_select :user_id, User.conductor, :id, :email, prompt: "selecciona un conductor"%>
  </div>

  <div>
    <%= form.submit %>
  </div>
