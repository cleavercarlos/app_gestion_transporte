<%= form_with(model: trayecto) do |form| %>
  <% if trayecto.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(trayecto.errors.count, "error") %> prohibited this trayecto from being saved:</h2>

      <ul>
        <% trayecto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :descripcion, style: "display: block" %>
    <%= form.text_area :descripcion %>
